{
  "compilerOptions": {
    "target": "ES6",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "skipLibCheck": true
  }
}
